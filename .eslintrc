{
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 11,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "env": {
        "browser": true,
        "es2020": true
    },
    "extends": [
        "standard",
        "prettier",
        "prettier/standard",
        "eslint:recommended",
        "prettier/react",
        "plugin:react/recommended"
    ],
    "plugins": ["prettier"],
    "rules": {
        "prettier/prettier": "error",
        "semi": ["error", "always"],
        "semi-style": ["error", "last"],
        "quotes": [
            "error",
            "double",
            {
                "allowTemplateLiterals": true
            }
        ],
        "comma-dangle": ["warn", "never"],
        "linebreak-style": ["warn", "unix"],
        "camelcase": ["warn"]
    }
}